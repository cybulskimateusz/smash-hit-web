# Stage 1: Build
FROM node:20-alpine AS build

WORKDIR /app

COPY server/package*.json ./

RUN npm install

COPY server/ ./

RUN npm run build

# Stage 2: Runtime
FROM node:20-alpine

WORKDIR /app

COPY --from=build /app/package*.json ./

RUN npm install --omit=dev

COPY --from=build /app/dist ./dist

EXPOSE 8080

CMD ["node", "dist/index.prod.js"]
